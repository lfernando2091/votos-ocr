<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:animateLayoutChanges="true"
    tools:context="saganet.mx.com.bingo.startup.Configuracion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="70dp"
        android:orientation="vertical"
        android:id="@+id/configView">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp"
            app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titulo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:singleLine="false"
                    android:text="Camara" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView1"
                    android:layout_below="@id/titulo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/campo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:textSize="@dimen/text_new_account"
                        android:hint="RESOLUCIÃ“N DP"
                        android:inputType="numberDecimal"
                        tools:text="0" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView1"
                    android:padding="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/campo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:textSize="@dimen/text_new_account"
                        android:hint="RADIO MAXIMO"
                        android:inputType="numberDecimal"
                        tools:text="0" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:padding="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/campo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:textSize="@dimen/text_new_account"
                        android:hint="RADIO MINIMO"
                        android:inputType="numberDecimal"
                        tools:text="0" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView3"
                    android:padding="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/campo4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:textSize="@dimen/text_new_account"
                        android:hint="DISTANCIA MINIMA"
                        android:inputType="numberDecimal"
                        tools:text="0" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView4"
                    android:padding="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/campo5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:textSize="@dimen/text_new_account"
                        android:hint="THRESHOLD EDGE"
                        android:inputType="numberDecimal"
                        tools:text="0" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView5"
                    android:padding="10dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/campo6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:textSize="@dimen/text_new_account"
                        android:hint="THRESHOLD CENTER"
                        android:inputType="numberDecimal"
                        tools:text="0" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView6"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <Button
                        android:theme="@style/AppTheme.Button.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="ASIGNAR"
                        android:id="@+id/btnAnalize"
                        android:onClick="runAnalize" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Default"
                        android:theme="@style/AppTheme.Button.Colored"
                        android:id="@+id/btnImage"
                        android:onClick="runImage" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp"
            app:cardElevation="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titulo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:singleLine="false"
                    android:text="Dispositivo" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchButton"
                    android:layout_below="@id/titulo2"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="TAREAS A SEGUNDO PLANO:" />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchLog"
                    android:layout_below="@id/switchButton"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="IMPRIMIR LOG:" />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchCutSize"
                    android:layout_below="@id/switchLog"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="RECORTAR IMAGEN:" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible"
            android:id="@+id/imageAnalize" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible"
            android:id="@+id/imageAnalize2" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
